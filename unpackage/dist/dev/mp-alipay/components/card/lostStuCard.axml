<view><block a:if="{{photo.length===0}}"><view data-event-opts="{{[['tap',[['postPhone',['$event']]]]]}}" class="corCard_box" onTap="__e"><view><view class="corCard_btn iconfont"></view><view class="corCard_text"><view>点击拍照识别</view><view>智能填入学生卡/身份证信息</view></view></view></view></block><block a:else><view data-event-opts="{{[['tap',[['getPreview',['$event']]]]]}}" class="corPhoto" onTap="__e"><view data-event-opts="{{[['tap',[['deletePhoto',['$event']]]]]}}" class="iconfont _i" onTap="__e"></view><view hidden="{{!(isScan)}}" class="scanImg"></view><image src="{{photo[0]}}" mode="aspectFit"></image></view></block><form class="corMessage" report-submit data-event-opts="{{[['submit',[['formSubmit',['$event']]]]]}}" onSubmit="__e"><view>姓名:<input type="text" data-event-opts="{{[['input',[['__set_model',['','stuName','$event',[]]]]]]}}" value="{{stuName}}" onInput="__e"/>学号:<input type="number" data-event-opts="{{[['input',[['__set_model',['','stuNum','$event',[]]]]]]}}" value="{{stuNum}}" onInput="__e"/></view><view><view class="corMethod _ul"><view data-event-opts="{{[['tap',[['getLostRelateType',['place']]]]]}}" class="{{(('_li')+' '+(relationType==='place'?'selected':''))}}" onTap="__e">指定领取地点</view><view data-event-opts="{{[['tap',[['getLostRelateType',['qq']]]]]}}" class="{{(('_li')+' '+(relationType==='qq'?'selected':''))}}" onTap="__e">qq</view><view data-event-opts="{{[['tap',[['getLostRelateType',['tel']]]]]}}" class="{{(('_li')+' '+(relationType==='tel'?'selected':''))}}" onTap="__e">手机号</view></view><view class="cor_input"><block a:if="{{relationType==='place'}}"><input type="text" placeholder="填写指定地点" data-event-opts="{{[['input',[['__set_model',['','relation','$event',[]]]]]]}}" value="{{relation}}" onInput="__e"/></block><block a:if="{{relationType==='qq'}}"><input type="number" placeholder="填写qq" data-event-opts="{{[['input',[['__set_model',['','relation','$event',[]]]]]]}}" value="{{relation}}" onInput="__e"/></block><block a:if="{{relationType==='tel'}}"><input type="number" placeholder="填写联系电话" data-event-opts="{{[['input',[['__set_model',['','relation','$event',[]]]]]]}}" value="{{relation}}" onInput="__e"/></block></view></view><button class="cor_btn" type="default" form-type="submit">确认</button></form></view>